{
	"title": "My Right CMD",
  "rules": [
    {
	"description": "Right CMD + h/l to move between spaces",
      "manipulators": [
        {
          "type": "basic",

          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },

          "to": [
            {
              "key_code": "left_arrow",
				"modifiers": ["left_control"]
            }
          ]
        },
        {
          "type": "basic",

          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },

          "to": [
            {
              "key_code": "right_arrow",
				"modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
 	"description":"Right CMD+j/k to scroll tabs.",
      "manipulators": [
        {
          "type": "basic",

          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },

          "to": [
            {
              "key_code": "left_arrow",
				"modifiers": ["left_command", "left_option"]
            }
          ]
        },
        {
          "type": "basic",

          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },

          "to": [
            {
              "key_code": "right_arrow",
				"modifiers": ["left_command", "left_option"]
            }
          ]
        }
      ]
    }
  ]
}
